      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Ligerian Labs",
      "url": "https://ligerianlabs.fr",
      "email": "bonjour@ligerianlabs.fr",
      "description": "Laboratoire d'innovation IA à Angers, accompagnant les entreprises des Pays de la Loire",
      "address": {
