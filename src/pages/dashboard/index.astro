---
export const prerender = false;
import Base from "../../layouts/Base.astro";
import { getAuthenticatedUser } from "../../lib/auth";
import { getUserPurchases, FORMATION_TIERS, type FormationTier } from "../../lib/formations";
import db from "../../lib/db";

const user = await getAuthenticatedUser(Astro.cookies);
if (!user) {
  return Astro.redirect("/auth/connexion");
}

const subscriptions = db.prepare(
  "SELECT * FROM subscriptions WHERE user_id = ? ORDER BY created_at DESC"
).all(user.id) as any[];

const purchases = getUserPurchases(user.id);

// Deduplicate purchases ‚Äî keep only latest per pack
const uniquePurchases = Object.values(
  purchases.reduce((acc: Record<string, any>, p) => {
    if (!acc[p.pack] || new Date(p.created_at) > new Date(acc[p.pack].created_at)) {
      acc[p.pack] = p;
    }
    return acc;
  }, {})
) as typeof purchases;

// Sort: premium > intermediate > starter
const tierOrder = ['formation-premium', 'formation-intermediate', 'formation-starter'];
uniquePurchases.sort((a, b) => tierOrder.indexOf(a.pack) - tierOrder.indexOf(b.pack));

const tierIcons: Record<string, string> = {
  'formation-starter': 'üöÄ',
  'formation-intermediate': '‚ö°',
  'formation-premium': 'üíé',
};

const tierColors: Record<string, { bg: string; border: string; badge: string }> = {
  'formation-starter': { bg: 'bg-blue-50', border: 'border-blue-100', badge: 'bg-blue-100 text-blue-700' },
  'formation-intermediate': { bg: 'bg-purple-50', border: 'border-purple-100', badge: 'bg-purple-100 text-purple-700' },
  'formation-premium': { bg: 'bg-amber-50', border: 'border-amber-100', badge: 'bg-amber-100 text-amber-700' },
};
---

<Base title="Mon espace ‚Äî Ligerian Labs">
  <section class="max-w-4xl mx-auto px-6 py-16">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-3xl font-bold text-gray-900">Bonjour, {user.name} üëã</h1>
      <p class="text-gray-500 mt-1">{user.email}{user.company ? ` ¬∑ ${user.company}` : ''}</p>
    </div>

    {uniquePurchases.length === 0 && subscriptions.length === 0 ? (
      <div class="bg-white rounded-2xl border border-gray-100 p-12 text-center">
        <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl">
          üìö
        </div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Pas encore de formation</h2>
        <p class="text-gray-500 mb-8 max-w-md mx-auto">
          D√©couvrez nos formations pour int√©grer l'IA dans votre entreprise.
        </p>
        <a href="/formations" class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition">
          Voir les formations ‚Üí
        </a>
      </div>
    ) : (
      <div class="space-y-10">
        {/* Formations */}
        {uniquePurchases.length > 0 && (
          <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Vos formations</h2>
            <div class="space-y-3">
              {uniquePurchases.map((purchase: any) => {
                const formation = FORMATION_TIERS[purchase.pack as FormationTier];
                const tierDir = formation?.tier_dir || purchase.pack.replace('formation-', '');
                const icon = tierIcons[purchase.pack] || 'üìñ';
                const colors = tierColors[purchase.pack] || { bg: 'bg-gray-50', border: 'border-gray-100', badge: 'bg-gray-100 text-gray-700' };
                
                return (
                  <a 
                    href={`/formations/${tierDir}/`}
                    class={`block rounded-xl border ${colors.border} hover:shadow-md transition-all duration-200 group overflow-hidden`}
                  >
                    <div class="flex items-center gap-5 p-5">
                      <div class={`flex-shrink-0 w-12 h-12 ${colors.bg} rounded-xl flex items-center justify-center text-xl`}>
                        {icon}
                      </div>
                      <div class="flex-1 min-w-0">
                        <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition">
                          {formation?.name || purchase.pack}
                        </h3>
                        <p class="text-sm text-gray-500 mt-0.5">
                          {formation?.description}
                        </p>
                      </div>
                      <div class="flex items-center gap-3 flex-shrink-0">
                        <span class={`text-xs font-medium px-2.5 py-1 rounded-full ${colors.badge}`}>
                          Acc√®s complet
                        </span>
                        <svg class="w-5 h-5 text-gray-300 group-hover:text-blue-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/>
                        </svg>
                      </div>
                    </div>
                  </a>
                );
              })}
            </div>
            
            <div class="mt-4 text-center">
              <a href="/formations" class="text-sm text-gray-400 hover:text-blue-600 transition">
                Voir toutes les formations ‚Üí
              </a>
            </div>
          </div>
        )}

        {/* Services/Subscriptions */}
        {subscriptions.length > 0 && (
          <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Vos services</h2>
            <div class="space-y-3">
              {subscriptions.map((sub: any) => (
                <a href={`/dashboard/${sub.id}`} class="block bg-white rounded-xl border border-gray-100 p-5 hover:shadow-md transition-all group">
                  <div class="flex items-center justify-between">
                    <div>
                      <h3 class="font-semibold text-gray-900">{sub.pack}</h3>
                      <p class="text-sm text-gray-500 mt-0.5">
                        Souscrit le {new Date(sub.created_at).toLocaleDateString('fr-FR')}
                      </p>
                    </div>
                    <span class={`text-xs font-medium px-2.5 py-1 rounded-full ${
                      sub.status === 'active' ? 'bg-green-100 text-green-700' :
                      sub.status === 'provisioning' ? 'bg-yellow-100 text-yellow-700' :
                      sub.status === 'pending' ? 'bg-blue-100 text-blue-700' :
                      'bg-gray-100 text-gray-700'
                    }`}>
                      {sub.status === 'active' ? '‚úÖ Actif' :
                       sub.status === 'provisioning' ? '‚öôÔ∏è En cours' :
                       sub.status === 'pending' ? '‚è≥ En attente' :
                       sub.status}
                    </span>
                  </div>
                  {sub.server_ip && (
                    <div class="mt-4 pt-4 border-t border-gray-50 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                      {sub.server_ip && (
                        <div>
                          <span class="text-gray-400 text-xs">Serveur</span>
                          <p class="text-gray-900 font-mono text-xs mt-0.5">{sub.server_ip}</p>
                        </div>
                      )}
                      {sub.server_provider && (
                        <div>
                          <span class="text-gray-400 text-xs">Provider</span>
                          <p class="text-gray-900 text-xs mt-0.5">{sub.server_provider}</p>
                        </div>
                      )}
                    </div>
                  )}
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    )}
  </section>
</Base>
