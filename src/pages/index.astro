---
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<Base title="The Lab â€” AI-Driven Innovation">
  <!-- Hero -->
  <section class="max-w-6xl mx-auto px-6 py-32 text-center">
    <div class="inline-block bg-accent/10 text-accent text-sm font-medium px-4 py-1.5 rounded-full mb-8">
      AI-Driven Lab
    </div>
    <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6">
      Empowering Local Actors<br />
      <span class="gradient-text">Through AI</span>
    </h1>
    <p class="text-xl text-gray-400 max-w-2xl mx-auto mb-12">
      We are an AI-driven innovation lab. We build tools, strategies, and solutions
      that bring artificial intelligence to the people who need it most â€” local
      businesses, creators, and communities.
    </p>
    <div class="flex gap-4 justify-center">
      <a href="/about" class="bg-accent hover:bg-accent-light text-white px-8 py-3 rounded-lg font-medium transition">
        Learn More
      </a>
      <a href="/blog" class="border border-white/20 hover:border-white/40 text-white px-8 py-3 rounded-lg font-medium transition">
        Read the Blog
      </a>
    </div>
  </section>

  <!-- Pillars -->
  <section class="max-w-6xl mx-auto px-6 py-20">
    <h2 class="text-3xl font-bold text-center mb-16">What We Do</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="bg-surface border border-white/5 rounded-xl p-8 hover:border-accent/30 transition glow">
        <div class="text-4xl mb-4">ðŸ§ </div>
        <h3 class="text-xl font-semibold mb-3">AI Strategy</h3>
        <p class="text-gray-400">We help local actors identify where AI creates the most leverage in their workflow.</p>
      </div>
      <div class="bg-surface border border-white/5 rounded-xl p-8 hover:border-accent/30 transition glow">
        <div class="text-4xl mb-4">âš¡</div>
        <h3 class="text-xl font-semibold mb-3">AI Tooling</h3>
        <p class="text-gray-400">We build and deploy custom AI tools tailored to real-world needs â€” not hype.</p>
      </div>
      <div class="bg-surface border border-white/5 rounded-xl p-8 hover:border-accent/30 transition glow">
        <div class="text-4xl mb-4">ðŸ“š</div>
        <h3 class="text-xl font-semibold mb-3">AI Education</h3>
        <p class="text-gray-400">We run workshops, write guides, and create resources to demystify AI for everyone.</p>
      </div>
    </div>
  </section>

  <!-- Latest Posts -->
  {posts.length > 0 && (
    <section class="max-w-6xl mx-auto px-6 py-20">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-bold">Latest from the Blog</h2>
        <a href="/blog" class="text-accent hover:text-accent-light text-sm">View all â†’</a>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="bg-surface border border-white/5 rounded-xl p-6 hover:border-accent/30 transition group">
            <p class="text-sm text-muted mb-2">{post.data.date}</p>
            <h3 class="text-lg font-semibold mb-2 group-hover:text-accent transition">{post.data.title}</h3>
            <p class="text-gray-400 text-sm">{post.data.excerpt}</p>
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="max-w-4xl mx-auto px-6 py-20 text-center">
    <div class="bg-surface border border-white/5 rounded-2xl p-12 glow">
      <h2 class="text-3xl font-bold mb-4">Ready to leverage AI?</h2>
      <p class="text-gray-400 mb-8 max-w-lg mx-auto">
        Whether you're a local business, a creator, or a community â€” we'll help you
        harness AI to amplify what you do best.
      </p>
      <a href="mailto:hello@thelab.ai" class="bg-accent hover:bg-accent-light text-white px-8 py-3 rounded-lg font-medium transition inline-block">
        Let's Talk
      </a>
    </div>
  </section>
</Base>
