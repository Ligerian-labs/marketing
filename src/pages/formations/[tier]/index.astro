---
export const prerender = false;
import Base from "../../../layouts/Base.astro";
import { getAuthenticatedUser } from "../../../lib/auth";
import { hasAccess, getFormationChapters, FORMATION_TIERS, resolveFormationTier } from "../../../lib/formations";

const { tier } = Astro.params;
const resolvedTier = tier ? resolveFormationTier(tier) : null;

if (!resolvedTier) {
  return Astro.redirect("/formations/", 302);
}

const formation = FORMATION_TIERS[resolvedTier];

const user = await getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect(`/auth/connexion?redirect=/formations/${tier}/`);
}

if (!hasAccess(user.id, formation.tier_dir)) {
  // User doesn't have access - redirect to formations page with purchase option
  return Astro.redirect("/formations/");
}
const chapters = await getFormationChapters(formation.tier_dir);

// Fallback if chapters can't be read from README.md - use file listing
if (chapters.length === 0) {
  // Scan directory for markdown files
  import { readdirSync } from "node:fs";
  import { join } from "node:path";
  
  try {
    const contentPath = join(process.cwd(), 'src', 'formations', tier);
    const files = readdirSync(contentPath)
      .filter(file => file.endsWith('.md') && file !== 'README.md')
      .sort()
      .map(file => {
        const slug = file.replace('.md', '');
        const title = slug.replace(/^\d+-/, '').replace(/-/g, ' ')
          .replace(/\b\w/g, l => l.toUpperCase());
        return { slug, title };
      });
    chapters.push(...files);
  } catch (error) {
    console.error('Error reading chapter files:', error);
  }
}
