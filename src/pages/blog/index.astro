---
export const prerender = true;
import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Base title="Blog — Ligerian Labs | IA & Innovation en Pays de la Loire" description="Articles sur l'intelligence artificielle, les outils que nous construisons et retours d'expérience du terrain.">
  <section class="max-w-6xl mx-auto px-6 py-24">
    <p class="section-label mb-4">Le blog</p>
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Articles & réflexions</h1>
    <p class="text-text-secondary mb-16 max-w-xl">
      Réflexions sur l'IA, outils qu'on construit, et histoires du terrain.
    </p>

    {posts.length === 0 ? (
      <p class="text-muted">Pas encore d'articles. Revenez bientôt.</p>
    ) : (
      <div class="grid md:grid-cols-2 gap-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group">
            <div class="bg-surface rounded-2xl p-8 h-full border border-transparent hover:border-black/5 transition">
              <div class="flex items-center gap-3 mb-4">
                <span class="text-sm text-muted">{post.data.date}</span>
                {post.data.tags?.map((tag) => (
                  <span class="text-xs bg-black/5 text-text-secondary px-2 py-0.5 rounded-full">{tag}</span>
                ))}
              </div>
              <h2 class="text-xl font-bold mb-3 group-hover:text-accent-light transition">{post.data.title}</h2>
              <p class="text-text-secondary">{post.data.excerpt}</p>
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
</Base>
